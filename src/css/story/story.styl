/* CUSTOM STORY STYLE */

body
    padding 5vw
    padding-bottom 0em
    
@media (max-width: 1000px)
    body
    	padding 0vw
    	padding-top 5em

@font-face
	font-family Avenir

.recordigami-container
    height 82vh
    width 100%
    position relative
    margin 0 auto

.wrapper-container
	height 80vh
	width 100%
	position relative
	margin 0 auto

#graphic-wrapper
	height (100vh - 8rem)
	width 100%
	position relative
    overflow visible
    fill black



@font-face
    font-family $sans 

.wrapper
    position relative
    align-items center
    margin-right 10rem
    margin-left 10rem
    display block
    overflow visible

.bounds
    overflow visible

.tooltip
    opacity 0

.bounds-background
    fill white

.rect-tile
    opacity 0.25
    stroke-width 1
    stroke-opacity 1

.recordigami-tile
    opacity 1
    stroke-width 1
    stroke-opacity 1

.season-path
    stroke-opacity 1

.record-label
    font-feature-settings 'tnum' 1
    transition all 0.1s ease-out

.season-label
    font-size 0.36em
    text-anchor end
    font-feature-settings 'tnum' 1
    transition all 0.1s ease-out

.recordigami-legend-value
    transform translate(-50%, 50%) rotate(45deg)

.legend-tile
    stroke-opacity 0

.bookend-legend-tile
    stroke-opacity 0

.legend-tick
    stroke black

.voronoi
    fill transparent



.autocomplete
    box-shadow none !important
    position absolute
    left 50%
    margin-right -50%
    transform: translate(-50%, -91%)
    font-size 24px
    pointer-events all
    z-index 10
    border none
    outline none
    visibility hidden

.exit-icon
	position absolute
	height 20px
	width 20px
	z-index 1000
	margin auto
  	position absolute
	top 50%
	margin-top: -10px;
	right 5px
	visibility hidden
	pointer-events none

.typeahead
    box-shadow none !important
    width 355px
    position relative
    opacity 0
    border none
    z-index 10

input[type=text]
    font-size 24px
    font-family 'Raleway'
    background-color transparent
    width 355px
    opacity 1
    outline-width 0
    text-align center
    border-bottom none

@media (max-width: 1000px)

    input[type=text]
        font-size 20px
        font-family 'Raleway'
        background-color transparent
        width 300px
        opacity 1
        outline-width 0
        text-align center
        border-bottom none


.typeahead.dropdown-menu, span.twitter-typeahead .tt-menu
    min-width 100%
    background white
    border none
    box-shadow 0 2px 5px 0 rgba(0, 0, 0, .16), 0 2px 10px 0 rgba(0, 0, 0, .12)
    border-radius 0
    font-size 1.2rem

span
    &.twitter-typeahead
        .tt-hint
            font-size 0
        .tt-suggestion
            color gray
            cursor pointer
            padding 1rem
            text-transform capitalize
            font-weight 400
        .tt-menu
            max-height 300px
            overflow-y auto

span.twitter-typeahead .active.tt-suggestion,
span.twitter-typeahead .tt-suggestion.tt-cursor,
span.twitter-typeahead .active.tt-suggestion:focus,
span.twitter-typeahead .tt-suggestion.tt-cursor:focus,
span.twitter-typeahead .active.tt-suggestion:hover,
span.twitter-typeahead .tt-suggestion.tt-cursor:hover
    background-color #EEEEEE
    color #4285F4


.positive-bars
    opacity 1

.negative-bars
    opacity 1

.bar-diffs
    opacity 1

.era-background
    opacity 1



#scrolly-side .scrolly
    display flex
    margin-right 0rem
    margin-left 0rem
    background-color transparent

    & > *
        flex 1

    article
        max-width 15rem
        z-index 100
        transform translate3d(0, 0, 200px)

        .step-intro
            min-height 1vh
            margin-bottom 3rem
            background-color transparent

        .step-outro
        	position relative
            z-index 0
            min-height 10vh
            margin-bottom 0rem
            background-color transparent
            transition background-color 250ms ease-in-out
            &:last-of-type
                margin-bottom 0
            &.is-active
                background-color $secondary
            .row 
                display flex
                max-height 30%

            .large-image
                margin auto
                object-fit contain
                max-height 8rem
                max-width 12rem


            .small-image
                object-fit contain
                margin 2%
                max-width 30%
                max-height 5rem

            p
                margin 0
                font-family Avenir
                color black
            h1
                margin 0
                text-align center
                font-weight 400
                color black
                font-size 24px
                font-family "Avenir"
            h2
                margin 0
                text-align center
                font-weight 400
                color black
                set-type-size(large)

        .step
            position relative
            z-index 100
            min-height 50vh
            margin-bottom 3rem
            background-color transparent
            transition background-color 250ms ease-in-out
            &:last-of-type
                margin-bottom 0
            &.is-active
                background-color $secondary
            
            .row 
                display flex
                max-height 30%

            .large-image
                margin auto
                object-fit contain
                max-height 4rem
                max-width 6rem


            .small-image
                object-fit contain
                margin 2%
                max-width 30%
                max-height 5rem

            p
                margin 0
                font-family Avenir
                color black
                background-color rgba(255, 255, 255, 0.90)
                text-align center
                border 1px solid #000000;
                padding 10px 20px 10px 20px
                border-radius 20px
            h1
                margin 0
                text-align center
                font-weight 400
                color black
                font-size 24px
                font-family "Avenir"
            h2
                margin 0
                text-align center
                font-weight 400
                color black
                set-type-size(large)
                

    figure.sticky
        position sticky
        background transparent
        height 94vh
        bottom 4rem
        top 6rem
        left 0
        z-index 10

@media (max-width: 10000px)
    #scrolly-side .scrolly
        display block
        max-width 60rem
        margin 0 auto
        background-color transparent
        padding 1rem

        article
            padding 0
            width 100%
            max-width 400px
            margin 0 auto
            position relative
            z-index 100
            transform translate3d(0, 0, 200px)

            .step-intro
                max-height 1vh
                margin-bottom 3rem
                background-color transparent
            
            .step-outro
                min-height 10vh
                margin-bottom 3rem
                background-color transparent
                position relative
                z-index 0

            .step
            	position relative
                z-index 100
                min-height 100vh
                margin-top 30vh
                &:last-of-type
                    margin-bottom 0


                p
                    margin 0
                    font-family Avenir
                    color red
                    background-color rgba(255, 255, 255, 0.90)
                    text-align center
                    border 1px solid #000000;
                    padding 10px 20px 10px 20px
                    border-radius 20px
                h1
                    margin 0
                    text-align center
                    font-weight 400
                    color black
                    font-size 24px
                    font-family "Avenir"
                h2
                    margin 0
                    text-align center
                    font-weight 400
                    color black
                    set-type-size(large)

                .large-image
                    margin auto
                    object-fit contain
                    max-height 8vh
                    max-width 150px
                    

        figure.sticky
            position sticky
            width 100%
            height 88vh
            background transparent
            margin 0
            top 17vh
            left 0
            z-index 10

@media (max-width: 1000px)
    #scrolly-side .scrolly
        figure.sticky
            top 20vh

